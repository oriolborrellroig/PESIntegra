<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="56dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="721dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:weightSum="7">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_post_titol_layout"
                android:layout_width="342dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/titolInputAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:hint="Titol"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_post_data_layout"
                android:layout_width="342dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/dateInputAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:hint="Data"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_post_hora_layout"
                android:layout_width="342dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/hourInputAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:hint="Hora"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_post_localitzacio_layout"
                android:layout_width="342dp"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/locationInputAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:hint="LocalitzaciÃ³"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TextView
            android:id="@+id/descripcioTitolAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/descripcioTitol" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/descriptionTitolAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_text_background" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/submitPostAct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/botoEnviar" />


            />
        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logoPES"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_pes"
                android:layout_gravity="center"
                />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@mipmap/ic_account_circle_grey600_36dp"
                    android:drawableTint="@color/accent"
                    android:hint="@string/mail"
                    android:inputType="textEmailAddress"
                    app:layout_constraintTop_toBottomOf="@+id/logo" />
            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_layout_pass_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:drawableRight="@mipmap/ic_lock_outline_grey600_36dp"
                    android:drawableTint="@color/accent"
                    app:layout_constraintTop_toBottomOf="@+id/logo" />
            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_layout_confirmacio_pass_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_confirmacio_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@mipmap/ic_lock_outline_grey600_36dp"
                    android:drawableTint="@color/accent"
                    android:ems="10"
                    android:hint="@string/confirmPassword"
                    android:inputType="textPassword"
                    app:layout_constraintTop_toBottomOf="@+id/login_register" />

            </android.support.design.widget.TextInputLayout>


        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_layout_datanaixement_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/register_datanaixement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:drawableRight="@mipmap/ic_today_black_36dp"
                    android:drawableTint="@color/accent"
                    android:ems="10"
                    android:focusable="false"
                    android:hint="@string/birthdate"
                    android:inputType="date"
                    android:maxLines="1"
                    app:layout_constraintTop_toBottomOf="@+id/login_register" />

            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                >

                <Button
                    android:id="@+id/registrar_cancel"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@color/divider"
                    android:textColor="@color/icons"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/login_email"
                    android:text="@string/BTNcancel"
                    android:layout_gravity="center"
                    />

                <Button
                    android:id="@+id/registrar_entrar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@color/primary_dark"
                    android:text="@string/BTNregister"
                    android:textColor="@color/icons"
                    app:layout_constraintTop_toBottomOf="@+id/login_email" />

            </LinearLayout>

        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logoPES"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo_pes"
                android:layout_gravity="center"
                />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <EditText
                android:id="@+id/login_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/ic_account_circle_grey600_36dp"
                android:drawableTint="@color/accent"
                app:layout_constraintTop_toBottomOf="@+id/logo" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <EditText
                android:id="@+id/login_confirmacio_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:hint="Confirmació email"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:drawableLeft="@mipmap/ic_account_circle_grey600_36dp"
                android:drawableTint="@color/accent"
                app:layout_constraintTop_toBottomOf="@+id/logo" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <EditText
                android:id="@+id/login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Contrassenya"
                android:inputType="textPassword"
                android:drawableLeft="@mipmap/ic_lock_outline_grey600_36dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/accent"
                app:layout_constraintTop_toBottomOf="@+id/login_register" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <EditText
                android:id="@+id/login_datanaixement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Data naixement : dd/mm/aa"
                android:inputType="date"
                android:drawableLeft="@mipmap/ic_today_black_36dp"
                android:drawablePadding="10dp"
                android:drawableTint="@color/accent"
                app:layout_constraintTop_toBottomOf="@+id/login_register" />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <Spinner
                android:id="@+id/pais"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"/>

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                >

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@color/divider"
                    android:textColor="@color/icons"
                    android:layout_marginRight="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/login_email"
                    android:text="Cancel·la"
                    android:layout_gravity="center"
                    />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@color/primary_dark"
                    android:text="Registra't"
                    android:textColor="@color/icons"
                    app:layout_constraintTop_toBottomOf="@+id/login_email" />

            </LinearLayout>

        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        >

        <ImageView
            android:id="@+id/logoPES"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_pes"
            android:layout_gravity="center"
            />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_account_circle_grey600_36dp"
            android:drawableTint="@color/accent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />


        <EditText
            android:id="@+id/login_confirmacio_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:hint="Confirmació email"
            android:inputType="textEmailAddress"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_account_circle_grey600_36dp"
            android:drawableTint="@color/accent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Contrassenya"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/ic_lock_outline_grey600_36dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/accent"
            app:layout_constraintTop_toBottomOf="@+id/login_register" />

        <EditText
            android:id="@+id/login_datanaixement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Data naixement : dd/mm/aa"
            android:inputType="date"
            android:drawableLeft="@mipmap/ic_today_black_36dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/accent"
            app:layout_constraintTop_toBottomOf="@+id/login_register" />

        <Spinner
            android:id="@+id/pais"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            >

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@color/divider"
                android:textColor="@color/icons"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@+id/login_email"
                android:text="Cancel·la"
                android:layout_gravity="center"
                />

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@color/primary_dark"
                android:text="Registra't"
                android:textColor="@color/icons"
                app:layout_constraintTop_toBottomOf="@+id/login_email" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TableRow
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="270dp"
                android:layout_height="270dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:background="@drawable/logo_pes"
                android:scaleType="centerCrop"
             />
        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:drawableRight="@mipmap/ic_account_circle_grey600_36dp"
                    android:drawableTint="@color/accent"
                    android:hint="@string/hint_email" />
            </android.support.design.widget.TextInputLayout>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:drawableRight="@mipmap/ic_lock_outline_grey600_36dp"
                    android:drawableTint="@color/accent"
                    android:hint="@string/hint_password" />
            </android.support.design.widget.TextInputLayout>
        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">
            <Button
                android:id="@+id/login_entrar"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@color/primary_dark"
                android:textColor="@color/icons"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/login_email"
                android:text="Entrar"
                android:layout_gravity="center"
                />

        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">
            <Button
                android:id="@+id/login_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textColor="@color/primary_text"
                android:text="Ets nou? Fes click aquÃ­ per registrarte!"
                app:layout_constraintTop_toBottomOf="@+id/login_pass"/>

        </TableRow>

    </TableLayout>


</android.support.constraint.ConstraintLayout>
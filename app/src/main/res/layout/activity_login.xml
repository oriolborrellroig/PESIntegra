<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
            android:background="@drawable/logo_pes"
            />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/ic_account_circle_grey600_36dp"
            android:drawableTint="@color/accent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <EditText
            android:id="@+id/login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawableLeft="@mipmap/ic_lock_outline_grey600_36dp"
            android:drawablePadding="10dp"
            android:drawableTint="@color/accent"
            app:layout_constraintTop_toBottomOf="@+id/login_register" />

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark"
            android:textColor="@color/icons"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/login_email"
            android:text="Entrar"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/login_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:textColor="@color/primary_text"
            android:text="Ets nou? Fes click aquÃ­ per registrarte!"
            app:layout_constraintTop_toBottomOf="@+id/login_pass"/>



    </LinearLayout>


</android.support.constraint.ConstraintLayout>